<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">

    <TextView
            android:layout_width="38dp"
            android:layout_height="47dp"
            android:text="X+"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:id="@+id/textView2" android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/coefficient_a"/>
    <EditText
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/coefficient_a"
            android:textAlignment="textEnd" android:maxLength="5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.427"
            app:layout_constraintEnd_toStartOf="@+id/textView6" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="61dp"
            android:layout_height="46dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/coefficient_b"
            android:textAlignment="textEnd" android:maxLength="5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.43"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>
    <EditText
            android:layout_width="59dp"
            android:layout_height="47dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/coefficient_c"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.433" android:textAlignment="textEnd" android:maxLength="5"
    />

    <TextView
            android:text="X+"
            android:layout_width="31dp"
            android:layout_height="44dp" android:id="@+id/textView4"
            android:textSize="24sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.433"
            app:layout_constraintStart_toEndOf="@+id/coefficient_b"/>
    <TextView
            android:text="= 0"
            android:layout_width="46dp"
            android:layout_height="43dp" android:id="@+id/textView5"
            android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/coefficient_c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.428"
            android:textAlignment="center"/>
    <TextView
            android:text="2"
            android:layout_width="25dp"
            android:layout_height="17dp" android:id="@+id/textView6" android:textSize="18sp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.312" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Решить уравнение"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:onClick="readCoefficients"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.499"
            android:background="#52006064" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>